print("Hello world")

local pos = 18

mon = peripheral.wrap("right")
mon.clear()
mon.setBackgroundColor(16)
mon.setTextColor(32777)
mon.setTextScale(5)

while true do
  if pos == -26 then
    pos = 18
  end


  mon.clear()
  mon.setCursorPos(pos, 1)
  mon.write("Cucumber laks")
  pos = pos - 1
  os.sleep(0.15)
end
